  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <version>3.1</version>
          <failOnMissingWebXml>false</failOnMissingWebXml>
        </configuration>
      </plugin>
      <!-- 配置jetty -->
      <plugin>
		  <groupId>org.mortbay.jetty</groupId>
		  <artifactId>jetty-maven-plugin</artifactId>
		  <configuration>
		  <!--   间隔x扫描一次,实现热部署 -->
		    <scanIntervalSeconds>10</scanIntervalSeconds>
		   <!--  编写类文件之后，是否自动重启jetty；可选后面两个值[manual|automatic] -->
			<reload>manual</reload>
		    <contextXml>${project.basedir}/src/main/resources/jetty-context.xml</contextXml>  
		    <webApp>
			 <!--    指定项目路径(如果不写，则按照pom.xml里面的artifactId属性值配置)，访问路径为http://localhost:8888/cms
				配置<contextPath>/cms</contextPath>，则访问路径为http://localhost:8888/cms
				配置<contextPath>/</contextPath>，则访问路径为http://localhost:8888 -->
		        <contextPath>/cms</contextPath>
		    </webApp>
		    <connectors>
		       <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
		          <port>8888</port>
		          <maxIdleTime>60000</maxIdleTime>
		       </connector>
		     </connectors>
		  </configuration>
		</plugin>
    </plugins>
  </build>
